{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "cd .. && bun run build",
    "devPath": "../public",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "BlackBook",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.blackbook.app"
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "BlackBook L1 Prediction Market",
        "width": 1600,
        "height": 1000
      }
    ]
  }
}
