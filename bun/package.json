{
  "name": "blackbook-frontend",
  "version": "1.0.0",
  "description": "BlackBook Prediction Market Frontend - Built with Bun",
  "main": "src/server.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/server.ts",
    "build": "bun build src/main.ts --outdir public/dist --target browser --minify",
    "start": "bun run src/server.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "chart.js": "^4.4.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "latest"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}